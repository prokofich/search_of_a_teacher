<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="190dp">

    <AbsoluteLayout
        android:layout_width="380dp"
        android:layout_height="156dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#6d9ced"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_item_messege_request_received_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_x="10dp"
            android:layout_y="23dp"
            android:background="@drawable/ic_account"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/id_item_message_request_received_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_x="99dp"
            android:layout_y="9dp"
            android:gravity="center"
            android:hint="имя"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/id_item_message_request_received_pr"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_x="98dp"
            android:layout_y="48dp"
            android:gravity="center"
            android:hint="предмет"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/id_item_message_request_received_price"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_x="256dp"
            android:layout_y="47dp"
            android:gravity="center"
            android:hint="цена"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_item_message_request_received_button_yes"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_x="98dp"
            android:layout_y="88dp"
            android:text="да"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_item_message_request_received_button_no"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_x="193dp"
            android:layout_y="88dp"
            android:text="нет"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </AbsoluteLayout>

</LinearLayout>