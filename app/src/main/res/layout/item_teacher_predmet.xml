<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="170dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/id_item_teacher_pr"
            android:layout_width="187dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="предмет"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/id_item_teacher_price"
            android:layout_width="183dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:hint="цена"
            android:textColor="@color/black" />

    </LinearLayout>
    <TextView
        android:id="@+id/id_item_teacher_text"
        android:layout_width="match_parent"
        android:gravity="center"
        android:hint="текст"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/id_item_teacher_button"
        android:layout_width="300dp"
        android:backgroundTint="#6d9ced"
        android:layout_gravity="center"
        android:text="хочу учиться!"
        android:layout_height="50dp"/>

</LinearLayout>