<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="200dp">

    <AbsoluteLayout
        android:layout_width="380dp"
        android:layout_height="175dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:background="#6d9ced"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/id_item_messege_request_iv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_x="10dp"
            android:layout_y="23dp"
            android:background="@drawable/ic_account"
            android:backgroundTint="@color/white" />

        <TextView
            android:id="@+id/id_item_message_request_name"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_x="99dp"
            android:layout_y="9dp"
            android:gravity="center"
            android:hint="имя"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/id_item_message_request_pr"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_x="98dp"
            android:layout_y="48dp"
            android:gravity="center"
            android:hint="предмет"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/id_item_message_request_price"
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_x="256dp"
            android:layout_y="47dp"
            android:gravity="center"
            android:hint="цена"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:layout_x="100dp"
            android:layout_y="88dp"
            android:gravity="center"
            android:text="статус:"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/id_item_message_request_status"
            android:layout_width="140dp"
            android:layout_height="30dp"
            android:layout_x="178dp"
            android:layout_y="87dp"
            android:gravity="center"
            android:hint="принято"
            android:textColor="@color/white"
            android:textSize="20dp" />

        <Button
            android:id="@+id/id_item_message_request_del"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_x="327dp"
            android:layout_y="38dp"
            android:background="@drawable/ic_delete" />

        <TextView
            android:id="@+id/id_item_message_request_mobile"
            android:layout_width="353dp"
            android:layout_height="40dp"
            android:layout_x="13dp"
            android:textSize="21dp"
            android:layout_y="126dp"
            android:gravity="center"
            android:textColor="@color/white" />
    </AbsoluteLayout>

</LinearLayout>